<Window x:Class="ChronoKeep.UI.Announcer.AnnouncerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChronoKeep.UI.Announcer"
        mc:Ignorable="d"
        Title="Announcer" Height="450" Width="900" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="NoAnnouncer" Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="No Announcer Reader Set" FontSize="54" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible"/>
        <ScrollViewer Grid.Row="1">
            <ListBox x:Name="AnnouncerBox" Visibility="Visible" />
        </ScrollViewer>
    </Grid>
</Window>
