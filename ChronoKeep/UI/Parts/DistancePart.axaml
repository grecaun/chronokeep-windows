<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:AvaloniaApp"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApp.DistancePart"
             x:DataType="local:DistancePart">
    <UserControl.Styles>
		<Style Selector="Button.invis">
			<Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Styles>
    <StackPanel Margin="50,0,0,0" MaxWidth="600">
        <Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="5*"/>
				<ColumnDefinition Width="3*"/>
				<ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0">
				<TextBlock Text="Name"
                           Width="55"
                           Margin="0"
                           FontSize="16"
                           VerticalAlignment="Center"/>
		        <TextBox Name="DistanceName"
                         GotFocus="SelectAll"
                         Margin="0,5"
                         FontSize="16"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"/>
            </DockPanel>
            <DockPanel Grid.Column="1"
                       Grid.ColumnSpan="2"
                       IsVisible="{Binding IsMain}">
				<TextBlock Text="Copy From"
                           Width="90"
                           FontSize="16"
                           Margin="10,5,0,5"
                           VerticalAlignment="Center"/>
                <ComboBox Name="CopyFromBox"
                          FontSize="16"
                          Margin="0,5,0,5"
                          SelectedIndex="0"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch">
                    <ComboBoxItem Content=""/>
                </ComboBox>
            </DockPanel>
            <DockPanel Grid.Column="1"
                       IsVisible="False">
				<TextBlock Text="Rank Priority"
                           Width="125"
                           Margin="10,0,0,0"
                           FontSize="16"
                           VerticalAlignment="Center"/>
                <TextBox Name="Ranking"
                         GotFocus="SelectAll"
                         TextInput="NumberValidation"
                         Margin="0,5,5,5"
                         MinWidth="5"
                         FontSize="16"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"/>
            </DockPanel>
            <Button Grid.Column="2"
                    Content="Remove"
                    Click="Remove_Click"
                    FontSize="14"
                    Width="100"
                    Height="35"
                    Margin="0"
                    IsVisible="False"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
        </Grid>
        <Grid Name="DistRow" IsVisible="{Binding IsMain}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="1">
                <TextBlock Text="Distance"
                           Width="75"
                           FontSize="16"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
                <TextBox Name="DistanceBox"
                         GotFocus="SelectAll"
                         TextInput="DotValidation"
                         Margin="0,5"
                         FontSize="16"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"/>
            </DockPanel>
            <ComboBox Grid.Column="2"
                      FontSize="16"
                      Margin="10,5,0,5"
                      SelectedIndex="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Stretch">
                <ComboBoxItem Content=""/>
                <ComboBoxItem Content="Miles"/>
                <ComboBoxItem Content="Kilometers"/>
                <ComboBoxItem Content="Meters"/>
                <ComboBoxItem Content="Yards"/>
                <ComboBoxItem Content="Feet"/>
            </ComboBox>
            <DockPanel Grid.Column="3" IsVisible="True">
				<TextBlock Text="Occurrence"
                           Width="75"
                           FontSize="12"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
                <ComboBox Name="FinishOccurrence"
                          Margin="0,5"
                          FontSize="16"
                          VerticalContentAlignment="Center"/>
            </DockPanel>
            <DockPanel Grid.Column="3" IsVisible="False">
				<TextBlock Text="Max Time"
                           Width="65"
                           FontSize="12"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
                <MaskedTextBox Name="TimeLimit"
                               GotFocus="SelectAll"
                               Mask="00:00:00"
                               FontSize="16"
                               Margin="0,5"
                               HorizontalAlignment="Stretch"
                               VerticalContentAlignment="Center"/>
            </DockPanel>
        </Grid>
        <DockPanel>
            <DockPanel Name="WavePanel">
                <TextBlock Text="Wave"
                           Width="55"
                           FontSize="16"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
                <TextBox Name="Wave"
                         GotFocus="SelectAll"
                         TextInput="NumberValidation"
                         Width="50"
                         Margin="0,5"
                         FontSize="16"
                         VerticalAlignment="Center"/>
                <TextBlock Text="Start"
                           Width="42"
                           FontSize="16"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
                <Button Name="WavePlus"
                        Classes="invis"
                        Click="SwapWaveType_Click"
                        Width="35"
                        Margin="0,0,3,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <Grid>
                        <PathIcon Data="{StaticResource add_regular}" IsVisible="{Binding PlusWave}"/>
                        <PathIcon Data="{StaticResource subtract_regular}" IsVisible="{Binding MinusWave}"/>
                    </Grid>
                </Button>
            </DockPanel>
            <TextBlock Name="IntervalBlock"
                       Text="Interval"
                       Width="75"
                       FontSize="16"
                       Margin="10,0,0,0"
                       IsVisible="False"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
            <MaskedTextBox Name="StartOffset"
                           GotFocus="SelectAll"
                           Mask="00:00:00.000"
                           Margin="0,5"
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Stretch"/>
            <DockPanel Name="LinkedPanel" IsVisible="False">
                <TextBlock Name="TypeTextBlock"
                           Text="Type"
                           Width="55"
                           FontSize="16"
                           Margin="10,0,0,0"
                           IsVisible="True"
                           VerticalAlignment="Center"/>
                <ComboBox Name="TypeBox"
                          SelectionChanged="TypeBox_SelectionChanged"
                          FontSize="16"
                          Margin="0,5"
                          SelectedIndex="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch"
                          IsVisible="True"
                          VerticalContentAlignment="Center">
			        <ComboBoxItem Content="Normal"/>
			        <ComboBoxItem Content="Early Start"/>
			        <ComboBoxItem Content="Late Start"/>
			        <ComboBoxItem Content="Drop"/>
			        <ComboBoxItem Content="Unranked"/>
			        <ComboBoxItem Content="Virtual"/>
                </ComboBox>
            </DockPanel>
            <DockPanel Name="CertPanel" IsVisible="True">
                <TextBlock Name="CertTextBlock"
                           Text="Certification"
                           IsVisible="True"
                           Width="70"
                           FontSize="12"
                           Margin="6,0,4,0"
                           VerticalAlignment="Center"/>
                <TextBox Name="Certification"
                         FontSize="16"
                         Margin="0,5"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"/>
            </DockPanel>
        </DockPanel>
        <DockPanel Name="AddRemovePanel"
                   Margin="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
            <DockPanel Name="UploadPanel"
                       IsVisible="False">
			    <ToggleSwitch Name="Upload"
                     OnContent=""
                     OffContent=""
                     Margin="0,-7,-7,-7"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     VerticalContentAlignment="Center"/>
                <Label Content="Upload Results"
                       VerticalAlignment="Center"
                       VerticalContentAlignment="Center"/>
            </DockPanel>
            <Button Content="Add Linked"
                    Click="AddSub_Click"
                    Width="100"
                    Height="30"
                    FontSize="14"
                    Margin="5,5,5,5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
            <Button Content="Remove"
                    Click="Remove_Click"
                    Width="100"
                    Height="30"
                    FontSize="14"
                    Margin="5,5,0,5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
        </DockPanel>
    </StackPanel>
</UserControl>
