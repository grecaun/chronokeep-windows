<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
             x:Class="AvaloniaApp.SegmentsPage"
             Padding="16"
             Background="{DynamicResource PrimaryBackground}"
             CornerRadius="8,0,0,0"
             >
    <UserControl.Styles>
        <Style Selector="Button.seg">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="10,5,10,5"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="150"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <ListBox
            Grid.Row="0"
            Name="SegmentsBox"
            KeyboardNavigation.TabNavigation="Continue"
            >
        </ListBox>
        <DockPanel Grid.Row="1"
                   HorizontalAlignment="Center">
            <DockPanel x:Name="apiPanel"
                       IsVisible="False"
                       HorizontalAlignment="Center">
                <Button Name="UploadButton"
                        Content="Upload"
                        Margin="10,5,10,5" FontSize="16" Height="35" Width="150"
                        Click="UploadButton_Click" />
                <Button Name="DeleteButton"
                        Content="Delete Uploaded"
                        Margin="10,5,10,5" FontSize="16" Height="35" Width="150"
                        Click="DeleteButton_Click" />
            </DockPanel>
            <Button Name="UpdateBtn"
                    Content="Save"
                    Click="Update_Click"
                    Classes="seg"/>
            <Button Name="ResetBtn"
                    Content="Reset"
                    Click="Reset_Click"
                    Classes="seg"/>
        </DockPanel>
        <DockPanel HorizontalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2">
        </DockPanel>
    </Grid>
</UserControl>
