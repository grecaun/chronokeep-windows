<Page
      x:Class="Chronokeep.UI.MainPages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Chronokeep.UI.MainPages"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button
                Name="ResetDB"
                Content="Reset Database"
                Margin="10,10,10,10"
                Grid.Column="0"
                Height="40"
                FontSize="16"
                Click="ResetDB_Click"
                HorizontalAlignment="Center"
                Width="175"
                />
            <Button
                Name="RebuildDB"
                Content="Rebuild Database"
                Margin="10,10,10,10"
                Grid.Column="1"
                Height="40"
                FontSize="16"
                Click="RebuildDB_Click"
                HorizontalAlignment="Center"
                Width="175"
                />
            <Button
                Name="Save"
                Content="Save"
                Margin="10,10,10,10"
                Grid.Column="2"
                FontSize="16"
                Height="40"
                Click="Save_Click"
                HorizontalAlignment="Center"
                Width="175"
                />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Visible">
                <StackPanel Grid.Column="0">
                    <DockPanel>
                        <Label Content="Company Name" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <TextBox Name="CompanyNameBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel>
                        <Label Content="Contact Email" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <TextBox Name="ContactEmailBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel Grid.Column="0">
                        <Label Content="Default Timing System" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <ComboBox Name="DefaultTimingBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel Grid.Column="0">
                        <Label Content="Theme Color" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <ComboBox Name="ThemeColorBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" SelectionChanged="ThemeColorBox_SelectionChanged" />
                    </DockPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Export Directory" FontSize="14" Margin="10,10,10,10" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Name="DefaultExportDirBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" IsEnabled="False" Grid.Column="1"/>
                        <Button Name="ChangeExport" FontSize="14" Height="35" Margin="0,10,10,10" HorizontalAlignment="Stretch" Grid.Column="2" Content="Change" Click="ChangeExport_Click"/>
                    </Grid>
                    <Grid Height="55">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Upload Interval" FontSize="14" Margin="10" Width="170" VerticalAlignment="Center" Grid.Column="0"/>
                        <Slider x:Name="uploadSlider" IsSnapToTickEnabled="True" TickFrequency="5" Minimum="5" Maximum="60" ValueChanged="uploadSlider_ValueChanged" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,0,10,0"/>
                        <Label FontSize="14" x:Name="uploadBlock" Width="30" Margin="0,10,10,10" VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
                    </Grid>
                    <Grid Height="55">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Download Interval" FontSize="14" Margin="10" Width="170" VerticalAlignment="Center" />
                        <Slider x:Name="downloadSlider" IsSnapToTickEnabled="True" TickFrequency="5" Minimum="5" Maximum="60" ValueChanged="downloadSlider_ValueChanged" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,0,10,0"/>
                        <Label FontSize="14" x:Name="downloadBlock" Width="30" Margin="0,10,10,10" VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
                    </Grid>
                    <Grid Height="55">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Announcer Window" FontSize="14" Margin="10" Width="170" VerticalAlignment="Center" />
                        <Slider x:Name="announcerSlider" IsSnapToTickEnabled="True" TickFrequency="1" Minimum="1" Maximum="120" ValueChanged="announcerSlider_ValueChanged" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,0,10,0"/>
                        <Label FontSize="14" x:Name="announcerBlock" Width="30" Margin="0,10,10,10" VerticalAlignment="Center" Grid.Column="2" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
                    </Grid>
                    <DockPanel>
                        <Label Content="Alarm Sound" FontSize="14" Margin="10" Width="170" VerticalAlignment="Center" />
                        <Button Content="Play" Height="35" Width="50" Name="PlayBtn" Click="PlayBtn_Click"  FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center"/>
                        <ComboBox Name="AlarmSoundBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center">
                            <ComboBoxItem Content="Alert 1" Uid="1" IsSelected="True"/>
                            <ComboBoxItem Content="Alert 2" Uid="2"/>
                            <ComboBoxItem Content="Alert 3" Uid="3"/>
                            <ComboBoxItem Content="Alert 4" Uid="4"/>
                            <ComboBoxItem Content="Alert 5" Uid="5"/>
                            <ComboBoxItem Content="Emily 1" Uid="6"/>
                            <ComboBoxItem Content="Emily 2" Uid="7"/>
                            <ComboBoxItem Content="Emily 3" Uid="8"/>
                            <ComboBoxItem Content="Michael 1" Uid="9"/>
                            <ComboBoxItem Content="Michael 2" Uid="10"/>
                            <ComboBoxItem Content="Michael 3" Uid="11"/>
                        </ComboBox>
                    </DockPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="105"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Program Identifier" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" Grid.Column="0" />
                        <TextBox Name="UniqueProgramID" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" IsEnabled="False" Grid.Column="1" />
                        <Button x:Name="RegenerateUniqueProgramIDButton" Content="Regenerate" Margin="0,10,10,10" Click="RegenerateUniqueProgramIDButton_Click" Grid.Column="2" />
                    </Grid>
                    <DockPanel>
                        <Label Content="Registration Server Name" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <TextBox Name="RegistrationServerNameBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel>
                        <Label Content="Twilio Account SID" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <TextBox Name="TwilioAccountSIDBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel>
                        <Label Content="Twilio Auth Token" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <TextBox Name="TwilioAuthTokenBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel>
                        <Label Content="Twilio Phone Number" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <TextBox Name="TwilioPhoneNumberBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel>
                        <Label Content="Mailgun From Name" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <TextBox Name="MailgunFromNameBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel>
                        <Label Content="Mailgun From Email" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <TextBox Name="MailgunFromEmailBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel>
                        <Label Content="Mailgun API Key" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <TextBox Name="MailgunAPIKeyBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                    <DockPanel>
                        <Label Content="Mailgun Domain" FontSize="14" Margin="10,10,10,10" Width="170" VerticalAlignment="Center" />
                        <TextBox Name="MailgunAPIURLBox" FontSize="14" Margin="0,10,10,10" VerticalContentAlignment="Center" />
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Column="1">
                <CheckBox Name="UpdatePage" Content="Auto-save changes?" FontSize="14" Margin="10,10,10,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
                <CheckBox Name="ExitNoPrompt" Content="Never prompt before exit?" FontSize="14" Margin="10,10,10,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
                <CheckBox Name="CheckUpdates" Content="Check for updates?" FontSize="14" Margin="10,10,10,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
