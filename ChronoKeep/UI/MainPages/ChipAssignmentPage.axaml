<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:AvaloniaApp"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
             x:Class="AvaloniaApp.ChipAssignmentPage"
             Padding="16"
             Background="{DynamicResource PrimaryBackground}"
             CornerRadius="8,0,0,0"
             x:DataType="local:ChipAssignmentPage"
             >
    <UserControl.Styles>
        <Style Selector="Button.chip">
            <Setter Property="Margin" Value="0,5,5,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style Selector="Button.chip2">
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style Selector="DataGrid">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="230"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="55"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>
            <DataGrid
                Grid.Row="0"
                Name="bibChipList" 
                ItemsSource="{Binding EventChips}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Bib" Binding="{Binding Bib}" MinWidth="110"/>
                    <DataGridTextColumn Header="Chip" Binding="{Binding Chip}" MinWidth="120"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="110"/>
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Grid.Row="0"
                    Name="Delete"
                    Content="Delete Selected"
                    Click="Delete_Click"
                    Classes="chip"
                    />
                <Button 
                    Grid.Column="1"
                    Grid.Row="0"
                    Name="Clear"
                    Content="Delete All"
                    Click="Clear_Click"
                    Classes="chip"
                    />
            </Grid>
            <TextBlock Grid.Row="2" Text="Ignored Chips" Margin="14,0" />
            <DataGrid
                Grid.Row="3"
                Name="ignoredChipList"
                ItemsSource="{Binding GlobalChips}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Bib" Binding="{Binding Bib}" MinWidth="110"/>
                    <DataGridTextColumn Header="Chip" Binding="{Binding Chip}" MinWidth="120"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="110"/>
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Grid.Row="0"
                    Name="DeleteIgnored"
                    Content="Delete Selected"
                    Click="DeleteIgnored_Click"
                    Classes="chip"
                    />
                <Button 
                    Grid.Column="1"
                    Grid.Row="0"
                    Name="ClearIgnored"
                    Content="Delete All"
                    Click="ClearIgnored_Click"
                    Classes="chip"
                    />
            </Grid>
        </Grid>
        <StackPanel Grid.Column="0">
            <DockPanel HorizontalAlignment="Center">
                <TextBlock 
                    Text="Chip Type"
                    Margin="10"
                    VerticalAlignment="Center" 
                    TextAlignment="Center"
                    FontSize="16"
                    />
                <ComboBox
                    Name="ChipTypeBox" 
                    Width="100" 
                    Margin="10"
                    VerticalContentAlignment="Center" 
                    FontSize="16"
                    >
                    <ComboBoxItem Content="Dec" IsSelected="True" />
                    <ComboBoxItem Content="Hex" />
                </ComboBox>
            </DockPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock
                        Text="Assign Single"
                        FontSize="20"
                        Margin="10,5,10,5"
                        HorizontalAlignment="Center"
                        />
                    <DockPanel>
                        <TextBlock
                            Text="Bib"
                            Margin="10,0,5,0"
                            FontSize="16"
                            Width="50"
                            VerticalAlignment="Center"
                            TextAlignment="Right"
                            />
                        <TextBox
                            Name="SingleBibBox"
                            FontSize="16"
                            Margin="5,5,5,5"
                            KeyDown="KeyPressHandlerSingle"
                            GotFocus="SelectAll"
                            />
                    </DockPanel>
                    <DockPanel>
                        <TextBlock
                            Text="Chip"
                            Margin="10,0,5,0"
                            FontSize="16"
                            Width="50"
                            VerticalAlignment="Center"
                            TextAlignment="Right"
                            />
                        <TextBox
                            Name="SingleChipBox"
                            FontSize="16"
                            Margin="5,5,5,5"
                            KeyDown="KeyPressHandlerSingle"
                            TextInput="ChipValidation"
                            GotFocus="SelectAll"
                            />
                    </DockPanel>
                    <Button
                        Name="SaveSingleButton"
                        Content="Save Single"
                        MaxWidth="150"
                        Click="SaveSingleButton_Click"
                        Classes="chip2"
                        Margin="10,10,10,10"
                        />
                    <Separator/>
                    <Button
                        Name="FileImport" 
                        Content="Import" 
                        Click="FileImport_Click"
                        Classes="chip2"
                        />
                    <Button
                        Name="Export"
                        Content="Export"
                        Click="Export_Click"
                        Classes="chip2"
                        />
                    <Button 
                        Name="UseTool"
                        Content="Use Tool" 
                        Click="UseTool_Click"
                        Classes="chip2"
                        />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock
                        Text="Assign Range" 
                        FontSize="20"
                        Margin="10,5,10,5"
                        HorizontalAlignment="Center"
                        />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="65"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Text="Bib" 
                            FontSize="16"
                            Margin="10,0,5,0"
                            VerticalAlignment="Center"
                            TextAlignment="Right"
                            />
                        <TextBox
                            Grid.Column="1"
                            Name="RangeStartBibBox"
                            KeyDown="KeyPressHandlerRange"
                            TextChanged="UpdateEndChip"
                            GotFocus="SelectAll"
                            FontSize="16"
                            Margin="5,5,5,5"
                            />
                        <TextBox
                            Grid.Column="2"
                            Name="RangeEndBibBox"
                            KeyDown="KeyPressHandlerRange" 
                            TextChanged="UpdateEndChip"
                            GotFocus="SelectAll"
                            FontSize="16"
                            Margin="5,5,5,5"
                            />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="65"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Grid.Column="0"
                            Text="Chip"
                            FontSize="16"
                            Margin="10,0,5,0"
                            VerticalAlignment="Center"
                            TextAlignment="Right"
                            />
                        <TextBox
                            Grid.Column="1"
                            Name="RangeStartChipBox" 
                            KeyDown="KeyPressHandlerRange" 
                            TextChanged="UpdateEndChip" 
                            TextInput="ChipValidation"
                            GotFocus="SelectAll"
                            FontSize="16"
                            Margin="5,5,5,5" 
                            />
                        <TextBlock
                            Grid.Column="2"
                            Name="RangeEndChipLabel"
                            FontSize="16"
                            Margin="10,0,5,0"
                            VerticalAlignment="Center"
                            />
                    </Grid>
                    <Button
                        Name="SaveRangeButton"
                        Content="Save Range"
                        Click="SaveRangeButton_Click"
                        Margin="0,10,0,10"
                        Classes="chip2"
                        />
                    <Separator/>
                    <TextBlock 
                        Text="Copy from:" 
                        FontSize="20"
                        Margin="10,2,10,0" 
                        HorizontalAlignment="Center"
                        />
                    <ComboBox
                        Name="previousEvents"
                        HorizontalAlignment="Stretch"
                        FontSize="16"
                        Margin="10,5,10,10"
                        />
                    <Button
                        Name="copy"
                        Content="Copy"
                        Click="Copy_Click"
                        Classes="chip2"
                        Margin="10,0,10,10"
                        />
                </StackPanel>
            </Grid>
            <StackPanel>
                <TextBlock
                        Text="Add Ignored Chip"
                        FontSize="20"
                        Margin="10,5,10,5"
                        HorizontalAlignment="Center"
                        />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock
                        Text="Bib"
                        Margin="10,0,5,0"
                        FontSize="16"
                        VerticalAlignment="Center"
                        />
                    <TextBox
                        Name="IgnoredChipBox"
                        KeyDown="KeyPressHandlerIgnored"
                        GotFocus="SelectAll"
                        Width="150"
                        FontSize="16"
                        Margin="5,5,5,5"
                        VerticalAlignment="Center"
                        />
                    <Button
                        Name="SaveIgnored"
                        Content="Save Ignored"
                        Click="SaveIgnored_Click"
                        Classes="chip2"
                        Margin="5,5,5,5"
                        />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
