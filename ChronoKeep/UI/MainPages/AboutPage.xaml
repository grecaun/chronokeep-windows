<ui:UiPage x:Class="Chronokeep.UI.MainPages.AboutPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Chronokeep.UI.MainPages"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800"
        Title="AboutPage"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        FlowDirection="LeftToRight"
        Scrollable="True"
        >
    <StackPanel Margin="10,10,10,10">
        <TextBlock
            Margin="0,16,0,24"
            FontSize="24"
            FontWeight="Medium"
            Text="About"
            />
        <TextBlock
            Padding="0,0,0,8"
            Text="Chronokeep"
            />
        <TextBlock
            x:Name="VersionLabel"
            Padding="0,0,0,8"
            />
        <Button
            Name="Update"
            Content="Check for Updates"
            FontSize="12"
            VerticalAlignment="Top"
            Margin="0,-5,0,16"
            Padding="6"
            Click="VersionLabel_Click"
            />
        <TextBlock
            Padding="0,8,0,0"
            Text="Created by James Sentinella"
            />
        <TextBlock
            Padding="0,24,0,8"
            FontSize="14"
            FontWeight="Medium"
            Text="Links"
            />
        <ui:Hyperlink
            Content="Project website on Github"
            Icon="Link24"
            NavigateUri="https://github.com/grecaun/chronokeep-windows"
            />
        <ui:Hyperlink
            Content="Latest release on Github"
            Icon="Link24"
            NavigateUri="https://github.com/grecaun/chronokeep-windows/releases/latest"
            />
        <TextBlock
            Padding="0,24,0,8"
            FontSize="14"
            FontWeight="Medium"
            Text="3rd Party Libraries"
            />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,32,0">
                <ui:Hyperlink Content="SQLite" NavigateUri="https://system.data.sqlite.org/" />
                <ui:Hyperlink Content="wkhtmltopdf" NavigateUri="https://wkhtmltopdf.org/" />
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="0,0,32,0">
                <ui:Hyperlink Content="WPF UI" NavigateUri="https://github.com/lepoco/wpfui" />
                <ui:Hyperlink Content="Ghostscript" NavigateUri="https://www.ghostscript.com/" />
            </StackPanel>
            <StackPanel Grid.Column="2">
                <ui:Hyperlink Content="Extended WPF Toolkit" NavigateUri="https://github.com/xceedsoftware/wpftoolkit" />
                <ui:Hyperlink Content="ClosedXML" NavigateUri="https://closedxml.github.io/ClosedXML/" />
            </StackPanel>
        </Grid>
        <TextBlock
            Padding="0,24,0,8"
            FontSize="14"
            FontWeight="Medium"
            Text="Application Folders"
            />
        <ui:Hyperlink
            Click="OpenDataFolder_Click"
            Content="Data"
            Icon="Folder24"
            />
    </StackPanel>
</ui:UiPage>
