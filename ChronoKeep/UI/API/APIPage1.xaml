<Page x:Class="Chronokeep.UI.API.APIPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chronokeep.UI.API"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="300"
      Title="APIPage1"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      >
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2">
        <TextBlock Text="Select API to use:" FontSize="16" TextAlignment="Center" Margin="0,0,0,5"/>
        <ComboBox Name="APIBox" Width="250" VerticalAlignment="Center" Margin="0,0,0,15" />
        <DockPanel>
            <Button Content="Next" Height="35" Width="120" HorizontalAlignment="Center" Margin="0,0,10,10" Click="Next_Click"  Grid.Column="0"/>
            <Button Content="Cancel" Height="35" Width="120" HorizontalAlignment="Center" Margin="10,0,0,10" Click="Cancel_Click" Grid.Column="1"/>
        </DockPanel>
    </StackPanel>
</Page>
