<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApp.APIPage3">

    <StackPanel VerticalAlignment="Center">
        <TextBlock Name="holdingLabel" 
                   Text="Retrieving Years, Please Hold." 
                   FontSize="18" 
                   VerticalAlignment="Center"
                   MaxWidth="300"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"/>
        <StackPanel Name="yearPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsVisible="False">
            <TextBlock Text="Select Year to link to:"
                       FontSize="16"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <ComboBox Name="yearCopyBox"
                      SelectionChanged="YearBox_SelectionChanged"
                      VerticalAlignment="Center"
                      Width="200"
                      Margin="0,0,0,5"/>
            <StackPanel x:Name="newPanel" IsVisible="False">
                <TextBlock Text="New Year:"
                           FontSize="16"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <DockPanel Margin="0,0,0,5">
                    <TextBlock Text="Year"
                               FontSize="15"
                               Width="60"
                               VerticalAlignment="Center"
                               TextAlignment="Right"
                               Padding="0,0,5,0"/>
                    <TextBox x:Name="yearBox"
                             FontSize="15"
                             Width="220"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"/>
                </DockPanel>
                <DockPanel Margin="0,0,0,5">
                    <TextBlock Text="Date"
                               FontSize="15"
                               Width="60"
                               VerticalAlignment="Center"
                               TextAlignment="Right"
                               Padding="0,0,5,0"/>
                    <DatePicker Name="dateBox"
                                FontSize="15"
                                Width="220"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"/>
                </DockPanel>
                <DockPanel Margin="0,0,0,5">
                    <TextBlock Text="Rank by"
                               FontSize="15"
                               Width="60"
                               VerticalAlignment="Center"
                               TextAlignment="Right"
                               Padding="0,0,5,0"/>
                    <ComboBox Name="rankBox"
                              FontSize="15"
                              Width="220"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Stretch"/>
                </DockPanel>
                <StackPanel Orientation="Horizontal">
                    <ToggleSwitch x:Name="LiveBox"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Margin="0,-7,0,-7"
                                  OffContent=""
                                  OnContent=""
                                  IsChecked="False"/>
                    <Label Content="Live?"/>
                </StackPanel>
                <TextBlock HorizontalAlignment="Center"
                           Margin="0,0,0,5"
                           Text="Days Allowed"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,0,0,5">
                    <Slider Name="DaysAllowedSlider"
                            ValueChanged="DaysAllowed_ValueChanged"
                            Width="150"
                            Margin="0,0,0,0"
                            IsSnapToTickEnabled="True"
                            TickFrequency="1"
                            Minimum="0"
                            Maximum="9"/>
                    <TextBlock Name="DaysAllowedText"
                               Text="0"
                               Width="20"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               TextAlignment="Right"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Finish"
                    Click="Next_Click"
                    Height="35"
                    Width="100"
                    VerticalAlignment="Bottom"
                    Margin="0,0,10,10"/>
            <Button Content="Cancel"
                    Click="Cancel_Click"
                    Height="35"
                    Width="100"
                    VerticalAlignment="Bottom"
                    Margin="10,0,0,10"/>
        </StackPanel>
    </StackPanel>
</UserControl>
