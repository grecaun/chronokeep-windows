<Page x:Class="Chronokeep.UI.API.APIPage3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chronokeep.UI.API"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="300"
      Title="APIPage3">

    <Grid>
        <TextBlock Name="holdingLabel" Text="Retrieving Events, Please Hold." FontSize="18" VerticalAlignment="Center" MaxWidth="250" HorizontalAlignment="Center" TextWrapping="Wrap" Visibility="Visible"/>
        <StackPanel Name="yearPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
            <Label Content="Select Year to link to:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ComboBox Name="YearBox" Width="200" VerticalAlignment="Center" Margin="0,0,0,10" SelectionChanged="YearBox_SelectionChanged"/>
            <StackPanel x:Name="newPanel" Visibility="Collapsed">
                <Label Content="New Year:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <DockPanel Margin="0,0,0,5">
                    <Label Content="Year" FontSize="15" Width="100" VerticalAlignment="Center" HorizontalContentAlignment="Right" Padding="0,0,5,0"/>
                    <TextBox x:Name="yearBox" FontSize="15" Width="180" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </DockPanel>
                <DockPanel Margin="0,0,0,5">
                    <Label Content="Date" FontSize="15" Width="100" VerticalAlignment="Center" HorizontalContentAlignment="Right" Padding="0,0,5,0"/>
                    <DatePicker Name="dateBox" FontSize="15" Width="180" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </DockPanel>
            </StackPanel>
        </StackPanel>
        <Button Content="Finish" Height="25" Width="100" VerticalAlignment="Bottom" Margin="0,0,150,10" Click="Next_Click" />
        <Button Content="Cancel" Height="25" Width="100" VerticalAlignment="Bottom" Margin="150,0,0,10" Click="Cancel_Click" />
    </Grid>
</Page>
