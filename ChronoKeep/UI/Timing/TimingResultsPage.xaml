<Page x:Class="Chronokeep.UI.Timing.TimingResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Chronokeep.UI.Timing"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimingResultsPage">

    <Grid>
        <ListView x:Name="updateListView" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Top" SelectionMode="Single" Loaded="UpdateListView_Loaded" HorizontalContentAlignment="Center" FontSize="12" MouseDoubleClick="UpdateListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Loc" Width="70" DisplayMemberBinding="{Binding LocationName}" />
                    <GridViewColumn Header="Occ" Width="25" DisplayMemberBinding="{Binding Occurrence}"/>
                    <GridViewColumn Header="System Time" Width="130" DisplayMemberBinding="{Binding SysTime}" />
                    <GridViewColumn Header="Time" Width="90" DisplayMemberBinding="{Binding Time}" />
                    <GridViewColumn Header="ChipTime" Width="90" DisplayMemberBinding="{Binding ChipTime}" x:Name="ChipTimeHeader" />
                    <GridViewColumn Header="Bib" Width="50" DisplayMemberBinding="{Binding Bib}" />
                    <GridViewColumn Header="Name" Width="130" DisplayMemberBinding="{Binding ParticipantName}" />
                    <GridViewColumn Header="Pl" Width="40" DisplayMemberBinding="{Binding PlaceStr}"/>
                    <GridViewColumn Header="G" Width="25" DisplayMemberBinding="{Binding PrettyGender}" />
                    <GridViewColumn Header="GP" Width="40" DisplayMemberBinding="{Binding GenderPlaceStr}"/>
                    <GridViewColumn Header="Age Grp" Width="55" DisplayMemberBinding="{Binding AgeGroupName}" />
                    <GridViewColumn Header="AP" Width="40" DisplayMemberBinding="{Binding AgePlaceStr}"/>
                    <GridViewColumn Header="Distance" Width="60" DisplayMemberBinding="{Binding DistanceName}" />
                    <GridViewColumn Header="T" Width="20" DisplayMemberBinding="{Binding PrettyType}"/>
                    <GridViewColumn Header="Segment" Width="70" DisplayMemberBinding="{Binding SegmentName}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
