<ui:UiWindow x:Class="Chronokeep.UI.Timing.ReaderSettings.RFIDSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chronokeep.UI.Timing.ReaderSettings"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="RFID Settings"
        d:DataContext="{d:DesignInstance local:RFIDSettings, IsDesignTimeCreatable=True}"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        WindowStartupLocation="CenterScreen"
        Closed="UiWindow_Closed"
        Height="500"
        Width="300"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:TitleBar
            Grid.Row="0">
        </ui:TitleBar>
        <StackPanel
            Grid.Row="1"
            Margin="20,10,20,20"
            VerticalAlignment="Center"
            >
            <StackPanel
                Orientation="Horizontal"
                Height="45"
                >
                <TextBlock
                    Text="Ultra ID"
                    TextAlignment="Right"
                    VerticalAlignment="Center"
                    Width="100"
                    Margin="5,5,5,5"
                    />
                <Slider
                    x:Name="idSlider"
                    Width="200"
                    Margin="5,5,5,5"
                    IsSnapToTickEnabled="True"
                    Maximum="255"
                    Minimum="1"
                    TickFrequency="1"
                    ValueChanged="idSlider_ValueChanged"
                    VerticalAlignment="Center"
                    />
                <TextBlock
                    x:Name="idDisplay"
                    Text="10"
                    TextAlignment="Left"
                    VerticalAlignment="Center"
                    Width="40"
                    Margin="5,5,5,5"
                    />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Height="45"
                >
                <TextBlock
                    Text="Chip Type"
                    TextAlignment="Right"
                    VerticalAlignment="Center"
                    Width="100"
                    Margin="5,5,5,5"
                    />
                <ComboBox
                    x:Name="chipBox"
                    Width="250"
                    Margin="5,5,5,5"
                    VerticalAlignment="Center"
                    >
                    <ComboBoxItem Content="Decimal" IsSelected="True" />
                    <ComboBoxItem Content="Hexadecimal" />
                </ComboBox>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Height="45"
                >
                <TextBlock
                    Text="Gating Mode"
                    TextAlignment="Right"
                    VerticalAlignment="Center"
                    Width="100"
                    Margin="5,5,5,5"
                    />
                <ComboBox
                    x:Name="gatingModeBox"
                    Width="250"
                    Margin="5,5,5,5"
                    VerticalAlignment="Center"
                    >
                    <ComboBoxItem Content ="Per Reader" IsSelected="True"/>
                    <ComboBoxItem Content ="Per Box" />
                    <ComboBoxItem Content ="First Time Seen"/>
                </ComboBox>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Height="45"
                >
                <TextBlock
                    Text="Gating Interval"
                    TextAlignment="Right"
                    VerticalAlignment="Center"
                    Width="100"
                    Margin="5,5,5,5"
                    />
                <Slider
                    x:Name="gatingSlider"
                    Width="200"
                    Margin="5,5,5,5"
                    IsSnapToTickEnabled="True"
                    Maximum="20"
                    Minimum="0"
                    TickFrequency="1"
                    ValueChanged="gatingSlider_ValueChanged"
                    VerticalAlignment="Center"
                    />
                <TextBlock
                    x:Name="gatingDisplay"
                    Text="10"
                    TextAlignment="Left"
                    VerticalAlignment="Center"
                    Width="40"
                    Margin="5,5,5,5"
                    />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Height="45"
                >
                <TextBlock
                    Text="When to Beep"
                    TextAlignment="Right"
                    VerticalAlignment="Center"
                    Width="100"
                    Margin="5,5,5,5"
                    />
                <ComboBox
                    x:Name="whenBeepBox"
                    Width="250"
                    Margin="5,5,5,5"
                    VerticalAlignment="Center"
                    >
                    <ComboBoxItem Content="Always" IsSelected="True" />
                    <ComboBoxItem Content="Only First Seen" />
                </ComboBox>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Height="45"
                >
                <TextBlock
                    Text="Beeper Volume"
                    TextAlignment="Right"
                    VerticalAlignment="Center"
                    Width="100"
                    Margin="5,5,5,5"
                    />
                <ComboBox
                    x:Name="volumeBox"
                    Width="250"
                    Margin="5,5,5,5"
                    VerticalAlignment="Center"
                    >
                    <ComboBoxItem Content="Off" IsSelected="True" />
                    <ComboBoxItem Content="Soft" />
                    <ComboBoxItem Content="Loud" />
                </ComboBox>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Height="45"
                >
                <TextBlock
                    Text="Time Zone"
                    TextAlignment="Right"
                    VerticalAlignment="Center"
                    Width="100"
                    Margin="5,5,5,5"
                    />
                <Slider
                    x:Name="timeZoneSlider"
                    Width="200"
                    Margin="5,5,5,5"
                    IsSnapToTickEnabled="True"
                    Maximum="23"
                    Minimum="-23"
                    TickFrequency="1"
                    ValueChanged="timeZoneSlider_ValueChanged"
                    VerticalAlignment="Center"
                    />
                <TextBlock
                    x:Name="timeZoneDisplay"
                    Text="10"
                    TextAlignment="Left"
                    VerticalAlignment="Center"
                    Width="40"
                    Margin="5,5,5,5"
                    />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                >
                <ui:ToggleSwitch
                    x:Name="setGPSSwitch"
                    Content="Set Time From GPS?"
                    Margin="5,5,5,5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                >
                <ui:ToggleSwitch
                    x:Name="readingSwitch"
                    Content="Reading?"
                    Margin="5,5,5,5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Click="readingSwitch_Click"
                    />
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Height="45"
                HorizontalAlignment="Center"
                >
                <Button
                        Content="Save Settings"
                        x:Name="saveSettingsButton"
                        Click="saveSettingsButton_Click"
                        Width="165"
                        Height="35"
                        Margin="5,5,5,5"
                        />
                <Button
                        Content="Close"
                        x:Name="closeButton"
                        Click="closeButton_Click"
                        Width="165"
                        Height="35"
                        Margin="5,5,5,5"
                        />
            </StackPanel>
        </StackPanel>
    </Grid>
</ui:UiWindow>
