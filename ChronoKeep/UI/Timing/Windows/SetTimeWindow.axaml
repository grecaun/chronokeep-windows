<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Chronokeep.UI.Timing.Windows.SetTimeWindow"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="-1"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        WindowStartupLocation="CenterScreen"
        Title="Set Time"
        Width="400"
        CanResize="False"
        Closing="Window_Closing">
    <StackPanel Margin="10,10,10,10"
                VerticalAlignment="Top"
                HorizontalAlignment="Center">
        <TextBlock Text="Set Time To"
                   FontSize="18"
                   TextAlignment="Center"
                   VerticalAlignment="Center"/>
        <RadioButton Name="NowTimeRadioButton"
                     Content="Now"
                     GroupName="TimeGroup"
                     FontSize="14"
                     IsChecked="True"
                     Margin="10,5,10,5"
                     VerticalContentAlignment="Center"/>
        <RadioButton Name="SpecificTimeRadioButton"
                     GroupName="TimeGroup"
                     Margin="10,5,10,5"
                     HorizontalAlignment="Stretch"
                     VerticalContentAlignment="Center">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <DatePicker Grid.Column="0"
                            Name="SpecificDateBox"
                            VerticalAlignment="Center"
                            FontSize="14"/>
                <MaskedTextBox Grid.Column="1"
                               Name="SpecificTimeBox"
                               FontSize="14"
                               Margin="10,0,0,0"
                               Mask="00:00:00.000"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"/>
            </Grid>
        </RadioButton>
        <ToggleSwitch Name="SetAllCheckBox"
                      OnContent=""
                      OffContent=""
                      FontSize="14"
                      Margin="10,-7,-7,-7"
                      VerticalContentAlignment="Center"/>
        <Label Content="Set all connected readers" VerticalAlignment="Center"/>
        <TextBlock Name="CurrentTimeLabel"
                   FontSize="14"
                   Margin="10,5,10,5"
                   TextAlignment="Center"
                   VerticalAlignment="Center"/>
        <TextBlock Name="TimeLabel"
                   FontSize="14"
                   Margin="10,5,10,5"
                   TextAlignment="Center"
                   VerticalAlignment="Center"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Name="Check"
                    Content="Get Time"
                    Click="Check_Click"
                    Height="35"
                    FontSize="14"
                    Margin="10,5,3,5"
                    HorizontalAlignment="Stretch"/>
            <Button Grid.Column="1"
                    Name="Set"
                    Content="Set Time"
                    Click="Set_Click"
                    Height="35"
                    FontSize="14"
                    Margin="7,5,7,5"
                    HorizontalAlignment="Stretch"/>
            <Button Grid.Column="2" 
                    Name="Done"
                    Content="Done"
                    Click="Done_Click"
                    Height="35"
                    FontSize="14"
                    Margin="3,5,10,5"
                    HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</Window>
