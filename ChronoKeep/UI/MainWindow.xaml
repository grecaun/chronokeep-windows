<ui:FluentWindow
        x:Class="Chronokeep.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chronokeep" Height="700" Width="1300" MinHeight="600" MinWidth="800"
        Closing="Window_Closing" Loaded="Window_Loaded"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Chronokeep.UI"
        d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=True}"
        d:Background="{DynamicResource ApplicationBackgroundBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ui:TitleBar
            Title="Chronokeep"
            FontSize="14"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="42,0,0,0">
        </ui:TitleBar>
        <ui:NavigationView
            PaneDisplayMode="LeftFluent"
            IsBackButtonVisible="Collapsed"
            x:Name="RootNavigation"
            Grid.Column="0"
            >
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                            Content="Dashboard"
                            Icon="Home24"
                            Click="DashboardButton_Click"
                            x:Name="dashboardButton"
                            />
                <ui:NavigationViewItem
                            Content="Timing"
                            Icon="ClipboardClock24"
                            Click="TimingButton_Click"
                            x:Name="timingButton"
                            />
                <ui:NavigationViewItem
                            Content="Announcer"
                            Icon="AlertUrgent24"
                            Click="Announcer_Click"
                            x:Name="announcerButton"
                            />
                <ui:NavigationViewItem
                            Content="Participants"
                            Icon="Person24"
                            Click="ParticipantsButton_Click"
                            x:Name="participantsButton"
                            />
                <ui:NavigationViewItem
                            Content="Chips"
                            Icon="DeveloperBoard24"
                            Click="ChipsButton_Click"
                            x:Name="chipsButton"
                            />
                <ui:NavigationViewItem
                            Content="Locations"
                            Icon="Map24"
                            Click="LocationsButton_Click"
                            x:Name="locationsButton"
                            />
                <ui:NavigationViewItem
                            Content="Distances"
                            Icon="Ruler24"
                            Click="DistancesButton_Click"
                            x:Name="distancesButton"
                            />
                <ui:NavigationViewItem
                            Content="Segments"
                            Icon="Organization24"
                            Click="SegmentsButton_Click"
                            x:Name="segmentsButton"
                            />
                <ui:NavigationViewItem
                            Content="Age Groups"
                            Icon="Trophy24"
                            Click="AgegroupsButton_Click"
                            x:Name="agegroupsButton"
                            />
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                            Content="Settings"
                            Icon="Settings24"
                            Click="SettingsButton_Click"
                            x:Name="settingsButton"
                            />
                <ui:NavigationViewItem
                            Content="About"
                            Icon="Info24"
                            Click="AboutButton_Click"
                            x:Name="aboutButton"
                            />
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Column="1"
                Grid.Row="1"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="8,0,0,0">
                <Frame x:Name="TheFrame" Grid.Row="1" Margin="6" />
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
