<Page x:Class="EventDirector.KioskSetupPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventDirector"
      mc:Ignorable="d" 
      d:DesignHeight="380" d:DesignWidth="380"
      Title="Kiosk Setup">

    <Grid>
        <TextBlock Text="This tool will enable you to use a tablet as a kiosk if the correct app is installed.  Please click next to continue." FontSize="32" TextWrapping="Wrap" Margin="10,40,10,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Button Content="Next" Height="25" Width="100" VerticalAlignment="Bottom" Margin="0,0,150,10" Click="Next_Click" />
        <Button Content="Cancel" Height="25" Width="100" VerticalAlignment="Bottom" Margin="150,0,0,10" Click="Cancel_Click" />
    </Grid>
</Page>
