<Page x:Class="EventDirector.UI.Timing.TimingResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventDirector.UI.Timing"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimingResultsPage">

    <Grid>
        <ListView x:Name="updateListView" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Top" SelectionMode="Single" Loaded="UpdateListView_Loaded" HorizontalContentAlignment="Center">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Loc" Width="80" DisplayMemberBinding="{Binding LocationName}" />
                    <GridViewColumn Header="Occ" Width="30" DisplayMemberBinding="{Binding Occurrence}"/>
                    <GridViewColumn Header="ID" Width="95" DisplayMemberBinding="{Binding Identifier}" />
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding ParticipantName}" />
                    <GridViewColumn Header="System Time" Width="130" DisplayMemberBinding="{Binding SysTime}" />
                    <GridViewColumn Header="Time" Width="90" DisplayMemberBinding="{Binding Time}" />
                    <GridViewColumn Header="Segment" Width="80" DisplayMemberBinding="{Binding SegmentName}" />
                    <GridViewColumn Header="Division" Width="80" DisplayMemberBinding="{Binding DivisionName}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
